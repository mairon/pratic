<h1 align="right" id="header">Grupos</h1>
Grupos Edicion
<% form_for(@grupo) do |f| %>
  <%= f.error_messages %>
<div class="group">  
  <table>
    <tr>
      <td><b>Descripcion :</b></td>
      <td><%= f.text_field :descricao,
                           :size => 40,
                           :onkeydown => "f(this)",
                           :onkeyup => "f(this)"%></td>
    </tr>
  </table>

</div>
<%= f.submit "Grabar" %> |
<%= link_to 'Volver', grupos_path %>
<% end %>