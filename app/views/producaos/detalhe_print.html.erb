      <td width="80" align="right"><%= saida %></td>
      <td width="80" align="right"><%= entrada %></td>
      <td width="100" align="right"></td>
      <td width="100" align="right"><%= number_to_currency( @total, :format =>' %n ', :separator => ",")%></td>
   </tr>


