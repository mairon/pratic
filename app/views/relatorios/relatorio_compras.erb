<body onload="DataInicio(),DataFinal(),CampoInicio()">
   <h1 align="right" id="header">.</h1>
   Relatorio Compras
   <div class="group">
      <h2>
         <%form_tag resultado_relatorio_compra_relatorios_path, :method => "get" do%>
            <table>

               <tr>
                  <td> Fecha:</td>
                  <td>
                     <input name="inicio" id="inicio"  size="10"  onkeyup="Formatadata(this,event)" />
                      Hasta
                     <input name="final"  id="final"   size="10" onkeyup="Formatadata(this,event)"/>                     
                  </td>
               </tr>
               <tr>
                 <td align="right">Proveedor :</td>

                 <td>
                   <%=   select("busca", "proveedor", Persona.all(:select => 'id,nome', :conditions => ["tipo_fornecedor = 1"]).collect {|p| [ p.nome, p.id ] },
                                                                            { :include_blank => true },
                                                                            { :onkeypress    => "return bloqEnter(event)",
                                                                              :onkeyup       => "EnterTab(event,'button')" })   %></td>

               </tr>


              <tr>
                <td></td>
                <td>
                  <input  id      ="button"
                          type    ="submit"
                          value   ="            Informe           "
                          onclick = "Tipo('0')"/>

                  <input type     = "submit"
                         value    = "            Excel            "
                         onclick  = "Tipo('1')"/>
                </td>
              </tr>

          <input type  = "hidden"
                 name  = "tipo"
                 id    = "tipo"
                 size  = "5"
                 value = "0"/>

            </table>
         <% end %>
         </h2>
      </div>
   </body>


