<body onload="DataInicio(),DataFinal(),CampoInicio()">
   <h1 align="right" id="header">.</h1>
   Relatorio Cobros
   <div class="group">
      <h2>
         <%form_tag resultado_relatorio_cobros_relatorios_path, :method => "get" do%>
            <table>

               <tr>
                  <td> Fecha:</td>
                  <td>
                     <input name="inicio" id="inicio"  size="10"  onkeyup="Formatadata(this,event)" />
                      Hasta
                     <input name="final"  id="final"   size="10" onkeyup="Formatadata(this,event)"/>                     
                  </td>
               </tr>
               <tr>
                 
               <td>Cliente :</td>
               <td><%=   select("busca", "persona", Persona.all(:select => 'id,nome').collect {|p| [ p.nome, p.id ] },
                                                                                          { :include_blank => true },
                                                                                          { :onkeypress    => "return bloqEnter(event)",
                                                                                            :onkeyup       => "EnterTab(event,'campo_grupo')" })   %></td>

               </tr>
          <tr>
            <td></td>
            <td>
              <fieldset>
                <legend>Filtros</legend>
                <input id="filtro" name="filtro" type="radio" value="0"  checked/>Resumen
                <input id="filtro" name="filtro" type="radio" value="1"/>Detalhado
                
              </fieldset>
             </td>
          </tr>

              <tr>
                <td></td>
                <td>
                  <input  id      ="button"
                          type    ="submit"
                          value   ="            Informe           "
                          onclick = "Tipo('0')"/>

                  <input type     = "submit"
                         value    = "            Excel            "
                         onclick  = "Tipo('1')"/>
                </td>
              </tr>

          <input type  = "hidden"
                 name  = "tipo"
                 id    = "tipo"
                 size  = "5"
                 value = "0"/>

            </table>
         <% end %>
         </h2>
      </div>
   </body>


