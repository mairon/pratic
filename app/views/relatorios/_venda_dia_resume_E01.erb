               <td width="200" colspan="6">      <%= h venda.id%>
                  <%= h venda.data.strftime("%d/%m/%Y")%>
                  <%= h venda.turno_nome%> -
                  <%= h venda.vendedor_nome%> -
                  <%= h venda.persona_nome%></td>

