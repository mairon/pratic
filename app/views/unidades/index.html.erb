<h1 align="right" id="header">Calalogo Choferes</h1>
<br/>

<%= link_to 'Nuevo', new_unidade_path %>

<div class="group">
  <h2>
    Sucursales
  </h2>

  <table border="0">
    <tr>
      <td width="50" align="center">No.</td>
      <td width="400" align="center">Nome</td>
    </tr>
    <tr><td colspan="2"><hr></td></tr>
  </table>


  <div class="rolagem" id="div">
    <table  border="0"z>
      <% @unidades.each do |unidade| %>
        <tr class = "<%= cycle("cor1", "cor2") %>">
          <td width="50"  align="center"><%=h unidade.id %></td>
          <td width="400" align="left"><%=h unidade.unidade_nome %></td>
          <td><%= link_to 'Mirar', unidade %></td>
          <td><%= link_to 'Editar', edit_unidade_path(unidade) %></td>
          <td><%= link_to 'Borrar', unidade, :confirm => 'Tem certeza que deseja Borrar?', :method => :delete %></td>
        </tr>
      <% end %>
    </table>
  </div>
</div>



