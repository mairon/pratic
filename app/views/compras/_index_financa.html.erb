<table>
  <tr>
    <td width="50" align="center">Cota</td>
    <td width="100" align="center">Vencimento</td>
    <td width="100" align="center">Cheque</td>
    <td width="100" align="center">Vencimento</td>
    <td width="100" align="center">Valor Dolar</td>
    <td width="100" align="center">Valor Gs.</td>
    <td width="200" align="center">Conta</td>

  </tr>
</table>

<div class="rolagem" dir="div">

  <table>

    <% for compras_financa in compras_financas %>
      <tr class = "<%= cycle("cor1", "cor2") %>">
        <td width="50" align="center">   <%= h compras_financa.cota%></td>
        <td width="100" align="left">    <%= h compras_financa.vencimento.strftime("%d/%m/%Y") %></td>
        <td width="100" align="left">    <%= h compras_financa.cheque %></td>
        <td width="100" align="left">    <%= h compras_financa.vencimento.strftime("%d/%m/%Y") %></td>
        <td width="100" align="right">   <%=h number_to_currency(compras_financa.valor_dolar, :format=>' %n ', :separator => ",")  %></td>
        <td width="100" align="right">   <%=h number_to_currency(compras_financa.valor_guarani, :format=>' %n ', :precision => 0)  %></td>
        
        <td width="200" align="left">    <%= h compras_financa.conta_id %></td>
        <td><%= link_to 'Editar', edit_compras_financa_path(compras_financa) %></td>
        <td><%= link_to 'Borrar', compras_financa, :confirm => 'Tiene Certeza ?', :method => :delete %></td>
      </tr>
    <% end %>
  </table>
</div>



