<h1 align="right" id="header">Conta</h1>
Cuentas Edicion
<% form_for(@conta) do |f| %>
  <%= f.error_messages %>
  <div class="group_cd">
        <table>
          <tr height="35">
            <td></td>
            <td>
              <fieldset>
                <legend>Tipo</legend>
                <%= f.radio_button :tipo, 0 %>Caja
                <%= f.radio_button :tipo, 1 %>Banco
              </fieldset>
            </td>
          </tr>

          <tr height="35">
            <td><b>Unidade:</b></td>
            <td><%= f.collection_select :unidade_id, Unidade.all(:select => 'id',:order => '1'),:id,:id %></td>

          </tr>

          <tr height="35">
            <td><b>Conta :</b></td>
            <td><%= f.text_field :nome, :onkeydown => "f(this)",
                                        :onkeyup => "f(this)"  %></td>
        </tr>

        <tr height="35">
          <td><b>Numero :</b></td>
          <td><%= f.text_field :numero, :size => 15 %></td>
        </tr>

        <tr height="35">
          <td><b>Direcion :</b></td>
          <td><%= f.text_field :direcao, :onkeydown => "f(this)",
                                         :onkeyup => "f(this)" %></td>
          <td><b>Ciudad :</b></td>
          <td><%= f.collection_select :cidade_id, Cidade.all(:select => 'id,nome',:order => '2'),:id,:nome %></td>
        </tr>

        <tr height="35">
          <td><b>Encargado :</b></td>
          <td><%= f.text_field :encarregado, :onkeydown => "f(this)",
                                             :onkeyup => "f(this)" %></td>
        </tr>

        <tr height="35">
          <td><b>Cod Contabil :</b></td>
          <td><%= f.text_field :cod_contabil%></td>

          <td><b>Rubro :</b></td>
          <td><%= f.collection_select :rubro_nome, Rubro.all(:select => 'descricao,codigo',:order => 'codigo'),:codigo,:descricao,{},{:onclick => "ContaBuscaCodContabil()"} %></td>

        </tr>

      </table>
  </div>
<%= f.submit "  Grabar  " %> | <%= link_to 'Volver', contas_path %>
<% end %>


