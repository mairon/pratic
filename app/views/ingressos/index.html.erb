<h1 align="right" id="header">Ingresos</h1>
<%= link_to 'Nuevo', :action => 'new' %>
<div class="group">
  <table>
    <tr>
      <td width="50" align="center">Cod.</td>
      <td width="100" align="center">Fecha</td>
      <td width="200" align="center">Coenta</td>
      <td width="100" align="center">Valor Gs.</td>
      <td width="100" align="center">Valor U$.</td>
      <td width="100" align="center">Rubro</td>
    </tr>
  </table>
  <div class="rolagem" id="div">
    <table>
      <% @ingressos.each do |ingresso| %>
        <tr class = "<%= cycle("cor1", "cor2") %>">
          <td width="50" align="center"><%=h ingresso.id %></td>
          <td width="100" align="center"><%=h ingresso.data.strftime("%d/%m/%Y") %></td>
          <td width="200" align="left"><%=h ingresso.conta_nome %></td>
          <td width="100" align="right"><%=h number_to_currency(ingresso.valor_guarani , :format=>' %n ', :precision => 0)%></td>
          <td width="100" align="right"><%=h number_to_currency(ingresso.valor_dolar , :format=>' %n ', :separator => ",")%></td>
          <td width="100" align="left"><%=h ingresso.rubro_nome %></td>
          <td><%= link_to 'Comprobante', ingresso %></td>
          <td><%= link_to 'Editar', edit_ingresso_path(ingresso) %></td>
          <td><%= link_to 'Borrar', ingresso, :confirm => 'Tiene Certeza?', :method => :delete %></td>
        </tr>
      <% end %>
    </table>
  </div>
</div>
