<div class="group">
   <table>
      <tr>
         <td width="80" align="center">Fecha</td>
         <td width="200" align="center">Factura</td>
         <td width="100" align="center">Status</td>
      </tr>
   </table>
   <div class="rolagem" dir="div">


      <table>



         <% @faturas.each do |fatura| %>
            <% if fatura.status == 0 %>
               <% estado = "Activo" %>
            <% else %>
               <% estado = "Anulado" %>
            <% end %>
            <% if fatura.status == 1 %>
               <tr class = "<%= cycle("cor1", "cor2") %>">
                  <td width="80" align="center" bgcolor="#ff6060"><%= fatura.data.strftime("%d/%m/%Y") %></td>
                  <td width="200" bgcolor="#ff6060"><%= fatura.documento_numero_01 %>-<%= fatura.documento_numero_02 %>-<%= fatura.documento_numero %></td>
                  <td width="100" bgcolor="#ff6060"><%= estado %></td>
                  <td bgcolor="#ff6060"><%= link_to 'Editar', edit_fatura_path(fatura) %></td>
                  <td bgcolor="#ff6060"><%= link_to 'Borrar', fatura, :confirm => 'Tiene Certeza?', :method => :delete %></td>
               </tr>
            <% else %>
               <tr class = "<%= cycle("cor1", "cor2") %>">
                  <td width="80" align="center"><%= fatura.data.strftime("%d/%m/%Y") %></td>
                  <td width="200"><%= fatura.documento_numero_01 %>-<%= fatura.documento_numero_02 %>-<%= fatura.documento_numero %></td>
                  <td width="100"><%= estado %></td>
                  <td><%= link_to 'Editar', edit_fatura_path(fatura) %></td>
                  <td><%= link_to 'Borrar', fatura, :confirm => 'Tiene Certeza?', :method => :delete %></td>
               </tr>

            <% end %>

         <% end %>
      </table>
   </div>
</div>
