



<table border="1">

   <tr class="head">
      <td align="center" colspan="9"><h1>Iventario <%=$empresa_nome%></h1>
      </td>

   </tr>

   <tr class="head">
      <td width="40" align="center">Clase</td>
      <td width="40" align="center">Grupo</td>
      <td width="100" align="center">Cod. Barra</td>
      <td width="500" align="center">Producto</td>
      <td width="80" align="center">Cantidad</td>
      <td width="100" align="center">Unit.</td>
      <td width="100" align="center">Total</td>
      <td width="250" align="center">Obs.</td>

   </tr>
   <% qtd  = 0  %>
   <% unit = 0  %>
   <% @stock.each do |produto| %>
      <%prod = Produto.find_by_id(produto.produto_id);%>
      <tr class = "<%= cycle("cor1", "cor2")%>">
         <td width="40" align="center"> <%=h prod.clase_id%> </td>
         <td width="40" align="center"> <%=h prod.grupo_id%> </td>
         <td width="50" align="center"> <%=h produto.barra%> </td>
         <td width="500" align="left"> <%=h produto.produto_nome%> </td>
         <td width="80" align="center"> <%=h produto.saida%> </td>
         <td width="100" align="right"> <%=h number_to_currency(produto.unitario_guarani,   :format=>' %n ', :precision => 0) %> </td>
         <td width="100" align="right"> <%=h number_to_currency( produto.saida * produto.unitario_guarani,   :format=>' %n ', :precision => 0) %> </td>
         <td></td>
         <% qtd  += produto.saida  %>
         <% unit += produto.unitario_guarani  %>


      </tr>
   <% end %>
   <tr class="head">
      <td colspan="4" align="center"> Totales ====></td>
      <td width="80" align="center"> <%=h qtd%> </td>
      <td width="100" align="right"> <%=h number_to_currency(unit,   :format=>' %n ', :precision => 0) %> </td>
      <td width="100" align="right"> <%=h number_to_currency(qtd * unit,   :format=>' %n ', :precision => 0) %> </td>
      <td></td>
   </tr>
</table>


<style type="text/css">
   table { border-collapse: collapse;
           font-size: 7px}

   .titulo{font-size: 22px}
   td,tr { border: 1px solid black; }
</style>