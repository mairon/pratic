<h1 align="right" id="header">Pais</h1>
<%= link_to 'Volver', paises_path %>
<% form_for(@paise) do |f| %>
  <%= f.error_messages %>

  <div class="group">
    <h2>Pais</h2>
    <table>
      <tr>
        <td><b>Pais:</b></td>
        <td><%= f.text_field :nome, 
                             :siza      => 30,
                             :onkeydown => "f(this)",
                             :onkeyup   => "f(this)"%></td>
      </tr>
    </table>
  </div>

  <%= f.submit "Grabar" %> |
  <%= link_to 'Volver', paises_path %>
<% end %>



