  <br>
<div class="group">
<% form_for(@usuario) do |f| %>
  <%= f.error_messages %>

  
  <h2> Usuario</h2>

  <p>
    <%= f.label :usuario_nome %><br />
    <%= f.text_field :usuario_nome,:onkeydown => "f(this)", :onkeyup => "f(this)" %>
  </p>
  <p>
    <%= f.label :usuario_senha %><br />
    <%= f.password_field :usuario_senha,
                         :onkeydown => "f(this)",
                         :onkeyup => "f(this)"%>
  </p>


  <p>
   <%= f.radio_button :tipo, 0 %> Administrado
   <%= f.radio_button :tipo, 1 %> Financeiro
   <%= f.radio_button :tipo, 2 %> Usuario
   </p>
  <p>
    <%= f.submit 'Grabar' %>
  </p>


<% end %>
</div>
<%= link_to 'Volver', usuarios_path %>

