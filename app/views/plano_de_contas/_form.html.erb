
<h1 align="right" id="header">Plan de Cuenta</h1>
<br/>
<% form_for(@plano_de_conta) do |f| %>
   <%= f.error_messages %>
   <div class="group">
      <table>
        <tr height="40">
            <td  align="right">Codigo : </td>
            <td><%= f.text_field :codigo,
                                 :size => 15%></td>

            </tr>

            <tr height="40">
            <td  align="right">Descripcion : </td>
            <td><%= f.text_field :descricao,
                                 :size      => 50,
                                 :onkeydown => "f(this)",
                                 :onkeyup   => "f(this)"%></td>
            </tr>
      </table>
   </div>

   <%= f.submit "Grabar" %> |
   <%= link_to 'Volver', plano_de_contas_path %>
<% end %>
