<h1 align="right" id="header">Manifestacion de Bienes</h1>
<%= link_to 'Nuevo', new_manifestacao_de_ben_path %>
<div class="group">
  <table>
    <tr>
      <td width="300" align="center">Nombre</td>
      <td width="200" align="center">Tipo</td>
      <td width="100" align="center">Valor Dolar</td>
      <td width="100" align="center">Valor Gs.</td>
    </tr>
  </table>

  <div class="rolagem" id="div">
    <table>

      <% for manifestacao_de_ben in @manifestacao_de_bens %>
        <tr class = "<%= cycle("cor1", "cor2") %>">
          <td width="300" align="left"><%=h manifestacao_de_ben.persona_nome %></td>
          <td width="200" align="left"><%=h manifestacao_de_ben.tipo %></td>
          <td width="100" align="right"><%=h number_to_currency(manifestacao_de_ben.valor_dolar, :format=>' %n ', :separator => ",")  %></td>
          <td width="100" align="right"><%=h number_to_currency(manifestacao_de_ben.valor_guarani, :format=>' %n ', :separator => ",")  %></td>
          <td><%= link_to 'Editar', edit_manifestacao_de_ben_path(manifestacao_de_ben) %></td>
          <td><%= link_to 'Borrar', manifestacao_de_ben, :confirm => 'Tiene Certeza?', :method => :delete %></td>
        </tr>
      <% end %>
    </table>
  </div>
</div>

