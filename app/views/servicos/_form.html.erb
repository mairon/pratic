<h1 align="right" id="header">Servicios</h1>
<%= link_to 'Volver', servicos_path %>
<% form_for(@servico) do |f| %>
  <%= f.error_messages %>
  <div class="group">
    <table>
      <tr>
        <td>Descripcion :</td>
        <td><%= f.text_field :nome, 
                             :size => 25,
                             :onkeydown => "f(this)",
                             :onkeyup => "f(this)"%></td>

      </tr>
      <tr>
        <td></td>
        <td colspan="2">
          <fieldset>
            <legend>Tipo</legend>
            <%= f.radio_button :tipo, 0,:Checked => "True" %>Hrs.
            <%= f.radio_button :tipo, 1 %>Km
          </fieldset>
        </td>
      </tr>
      <tr>
        <td align="right">Valor :</td>
        <td><%= f.text_field :valor, :size => 15 %></td>
      </tr>

    </table>
  </div>
  
    <%= f.submit "Grabar" %>
    <%= link_to 'Volver', servicos_path %>
<% end %>


