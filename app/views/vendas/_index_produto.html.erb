<table>
  <tr>    
    <td width="310" align="left">Producto</td>
    <td width="70" align="center">Ctd.</td>
    <td width="50" align="right">Unit </td>    
    <td width="60" align="right">Total</td>

  </tr>
</table>
<div class="rolagem" dir="div">

  <table>

    <% for vendas_produto in vendas_produtos %>
      <tr class = "<%= cycle("cor1", "cor2") %>">        
        <td width="600" align="left"> <%= vendas_produto.produto_nome %> </td>
        <td width="100" align="right"> <%= format("%.3f",vendas_produto.quantidade.to_f) %> </td>
        <td width="100" align="right"><%= number_to_currency(vendas_produto.unitario_guarani, :format=>' %n ', :precision => 0) %> </td>
        <td width="100" align="right"><%= number_to_currency(vendas_produto.total_guarani, :format=>' %n ', :precision => 0) %> </td>
        <td><%= link_to 'Editar', edit_vendas_produto_path(vendas_produto) %></td>
        <td><%= link_to 'Borrar', vendas_produto, :confirm => 'Tiene Certeza?', :method => :delete %></td>
      </tr>
    <% end %>
  </table>
</div>

