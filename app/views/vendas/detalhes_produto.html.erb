<div class="group">
<table>
  <tr>
    <td width="30" ></td>
    <td width="300" align="center">Producto</td>
    <td width="100" align="center">Cantidad</td>
    <td width="100" align="center">Unit Gs.</td>    
    <td width="100" align="center">Total Gs.</td>
    <td width="100" align="center">Taxa</td>
    <td width="100" align="center">Iva.</td>

  </tr>
</table>
<div class="rolagem" dir="div">

  <table>

    <% indice     = 1 %>
    <% totquant   = 0 %>    
    <% totguarani = 0 %>
    <% tottaxa    = 0 %>

    <% for vendas_produto in @produtos %>
      <tr class = "<%= cycle("cor1", "cor2") %>">
        <td width="30" align="center" ><%= indice   %></td>
        <td width="300" align="left"> <%= vendas_produto.produto_nome %> </td>
        <td width="100" align="right"> <%= format("%.3f",vendas_produto.quantidade.to_f) %> </td>
        <td width="100" align="right"><%= number_to_currency(vendas_produto.unitario_guarani, :format=>' %n ', :precision => 0) %> </td>
        <td width="100" align="right"><%= number_to_currency(vendas_produto.total_guarani, :format=>' %n ', :precision => 0) %> </td>
        <td width="100" align="right"><%= vendas_produto.taxa.to_i %> </td>
        <td width="100" align="right"><%= number_to_currency(vendas_produto.iva_guarani, :format=>' %n ', :precision => 0) %> </td>
      </tr>
      <% indice     = indice     + 1 %>
      <% totquant   = totquant   + vendas_produto.quantidade %>
      <% totguarani = totguarani + vendas_produto.total_guarani %>
      <% tottaxa    = tottaxa    + vendas_produto.iva_guarani %>

    <% end %>
  </table>

</div>

  <table >
  <tr>
    <td width="230"></td>
    <td width="100" align="right">  <%=h format("%.3f",totquant.to_f)  %></td>
    <td width="150" align="right">   <%=h number_to_currency(totguarani,        :format=>' %n ', :precision => 0)  %></td>
    <td width="160" align="right">   <%=h number_to_currency(tottaxa,           :format=>' %n ', :precision => 0)  %></td>

  </tr>
</table>



</div>

   <script>
    //ABRI POPUP-----------------------------------------------------------------
     document.onkeydown=function(e)
    {

    if(e.which == 27)
        self.close();

    }
     //FIM ABRI POPUP----------------------------------------------------------------

</script>
